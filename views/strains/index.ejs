<% include ../partials/header %>

<div class="container">
  <header class="jumbotron text-center">
    <div class="container">
      <h1>Welcome to Canna<strong>Reviews</strong></h1>
      <p>View our most popular strains</p>
      <div class="col-md-4 col-md-offset-4">
        <p>
          <a class="btn btn-primary" href="/strains/new">Add New Strain</a>
        </p>
      </div>
    </div>
  </header>
  
  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <div class="col-md-12">
      <% if(noMatch !== undefined) { %>
        <h3>
          <%= noMatch %>
        </h3>
      <% } %>
    </div>
    <% strains.forEach(function(strain){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <div class="thumb-fixed-height">
            <a href="/strains/<%= strain._id %>">
              <img src="<%= strain.image %>">
            </a>
          </div>
          <div class="caption">
            <h4><a href="/strains/<%= strain._id %>"><%= strain.name %></a></h4>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
  <p>
    <form action="/strains" method="GET" class="form-inline text-center">
      <div class="form-group">
        <input type="text" name="search" placeholder="Find a strain..." class="form-control">
        <input type="submit" value="Search" class="btn btn-default form-control">
      </div>
    </form>
  </p>
</div>
  

<% include ../partials/footer %>