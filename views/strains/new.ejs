<% include ../partials/header %>

<div class="container">
  <h1 style="text-align: center;">Add a new strain</h1>
  <div style="width: 30%; margin: 25px auto;">
    <form action="/strains" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="name" placeholder="Name" autocomplete="off">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="image" placeholder="Image URL" autocomplete="off">
      </div>
      <div class="form-group">
        <select name="type" class="form-control">
          <option value="Indica">Indica</option>
          <option value="Sativa">Sativa</option>
          <option value="Hybrid">Hybrid</option>
        </select>
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="description" placeholder="Description" autocomplete="off">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
      </div>
    </form>
    <a href="/strains">Go back</a>
  </div>
</div>

<% include ../partials/footer %>