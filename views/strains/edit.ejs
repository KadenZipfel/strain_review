<% include ../partials/header %>

<div class="container">
  <h1 style="text-align: center;">Edit <%= strain.name %></h1>
  <div style="width: 30%; margin: 25px auto;">
    <form action="/strains/<%= strain._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="strain[name]" value="<%= strain.name %>" autocomplete="off">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="strain[image]" value="<%= strain.image %>" autocomplete="off">
      </div>
      <div class="form-group">
        <select name="strain[type]" class="form-control" value="<%= strain.type %>">
          <option
            value="Indica"
            <% if(strain.type === "Indica"){ %>
              selected="selected"
            <% } %>
            >Indica
          </option>
          <option 
            value="Sativa"
            <% if(strain.type === "Sativa"){ %>
              selected="selected"
            <% } %>
            >Sativa
          </option>
          <option
            value="Hybrid"
            <% if(strain.type === "Hybrid"){ %>
              selected="selected"
            <% } %>
            >Hybrid
          </option>
        </select>
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="strain[description]" value="<%= strain.description %>" autocomplete="off">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
      </div>
    </form>
    <a href="/strains">Go back</a>
  </div>
</div>

<% include ../partials/footer %>