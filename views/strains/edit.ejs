<% include ../partials/header %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">
    <div class="well">
      <h1 style="text-align: center">Edit <%= strain.name %></h1>
    <form action="/strains/<%= strain._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <input class="form-control" type="text" name="strain[name]" value="<%= strain.name %>">
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        <input type="file" id="image" name="image" accept="image/*" value="<%= strain.image %>" required>
      </div>
      <div class="form-group">
        <select name="strain[type]" class="form-control" value="<%= strain.type %>">
          <option
           value="Indica"
            <% if(strain.type === "Indica"){ %>
              selected="selected"
            <% } %>
            >Indica
          </option>
          <option
            value="Sativa"
            <% if(strain.type === "Sativa"){ %>
              selected="selected"
            <% } %>
            >Sativa
          </option>
          <option
            value="Hybrid"
            <% if(strain.type === "Hybrid"){ %>
              selected="selected"
            <% } %>
            >Hybrid
          </option>
        </select>
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="strain[description]" value="<%= strain.description %>">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
      </div>
    </form>
    <a href="/strains">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>