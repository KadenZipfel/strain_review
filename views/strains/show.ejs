<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">CannaReview</p>
      <div class="list-group">
        <p>Other Strains You May Like:</p>
        <li class="list-group-item">Strain 1</li>
        <li class="list-group-item">Strain 2</li>
        <li class="list-group-item">Strain 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= strain.image %>">
        <div class="caption">
          <h4 class="pull-right">$12.00/Gram</h4>
          <h4><a><%= strain.name %></a></h1>
          <p><%= strain.description%></p>
          <p>
            <em>Submitted by: <%= strain.author.username %></em>
          </p>
          <% if(currentUser && strain.author.id.equals(currentUser._id)) { %>
            <a class="btn btn-warning btn-xs" href="/strains/<%= strain._id %>/edit">Edit</a>
            <form class="delete-form" action="/strains/<%= strain._id %>?_method=DELETE" method="POST">
              <button class="btn btn-danger btn-xs">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" href="/strains/<%= strain._id %>/comments/new">Add New Comment</a>
        </div>
        <hr>
          <% strain.comments.forEach(function(comment){ %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author.username %></strong>
              <span class="pull-right">10 days ago</span>
              <p><%= comment.text %></p>
              <a class="btn btn-xs btn-warning" 
                href="/strains/<%= strain._id %>/comments/<%= comment._id %>/edit">
                Edit
              </a>
              <form class="delete-form" action="/strains/<%= strain._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
              </form>
            </div>
          </div>
          <% }); %>
      </div>
    </div>
  </div>

<% include ../partials/footer %>