<% include ../partials/header %>

<div class="container">
  <div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">
    <h1 style="text-align: center;">Add New Comment to <%= strain.name %></h1>
    <div class="well well-login">
      <form action="/strains/<%= strain._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="Text" autocomplete="off">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
        </div>
      </form>
    <a href="/strains/<%= strain._id %>">Go back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>